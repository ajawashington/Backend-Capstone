<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Receiver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCompleted)
            </th>
            <th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model) 
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Receiver.TagName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sender.TagName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCompleted)
            </td>

            @foreach (var barterItem in item.BarterTrades)
            {
                <table>

                <td>
                    @Html.DisplayFor(modelItem => barterItem.BarterItem.Title)
                </td>
                </table>
            }

        </tr>
        }
    </tbody>
</table>

