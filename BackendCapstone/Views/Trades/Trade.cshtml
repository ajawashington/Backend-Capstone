@model BackendCapstone.Models.ViewModels.Trades.TradeWithItemsViewModel

@{
    ViewData["Title"] = "Trade";
}

<h1>Trade</h1>

<h4>Trade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Trade">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TradeId" />


            @for (var i = 0; i < Model.SelectedItems.Count; i++)
            {
                @Html.CheckBoxFor(item => Model.SelectedItems[i].IsSelected)
                <input type="hidden" asp-for="@Model.SelectedItems[i].BarterItemId"/>
                <td>@Model.SelectedItems[i].Title</td>
                <td>@Model.SelectedItems[i].Value</td>
            }

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

